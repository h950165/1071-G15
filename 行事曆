#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <string.h>

#define MAX 100

FILE *fp;

int counter=0;

struct Date{
   int year;
   int month;
   int day;
};

struct Lotto{
   Date date;
   char str[500] ;
};

void randgen(Lotto lottos[])
{


    char str[500];

     //lottos[counter].date.year ;
     //lottos[counter].date.month  ;
     //lottos[counter].date.day ;
     while(1)
    {
     printf("Enter year:  ");
     scanf("%d",&lottos[counter].date.year );

     printf("Enter month:  ");
     scanf("%d",&lottos[counter].date.month );

     printf("Enter day:  ");
     scanf("%d",&lottos[counter].date.day );

     printf("Thing:  ");
     scanf("%s",lottos[counter].str );

     printf("\n");
     counter++;
     break;
     }



}

void showLottos(Lotto lottos[], int n)
{
  for(int  i=0;i<n;i++)
    {
        printf("%d/%02d/%02d %s   ", lottos[i].date.year, lottos[i].date.month, lottos[i].date.day ,lottos[i].str );
        printf("\n");
    }

}

void writefFile(Lotto lottos[])
{
  int choice;
  char  filename[80];
  printf("=>") ;
  scanf("%d", &choice);
  printf("\n");
  switch(choice)
		{
		 case  1:
		   randgen(lottos);
           showLottos(lottos,counter);
           writefFile(lottos) ;
		   break;
        case   3:
            printf("Enter filename: ");
            scanf("%s",filename);

            fp=fopen(filename, "w");


            for(int  i=0;i<counter;i++)
            {
              fprintf(fp,"%d/%02d/%02d %s   \n", lottos[i].date.year, lottos[i].date.month, lottos[i].date.day ,lottos[i].str  );
            }

            fclose(fp);

            printf("%s Calendar data written to file Calendar.txt successfully\n",filename);

            break;
		}

}

void readFile(Lotto lottos[])
{
  int choice;
  char  filename[80];
  char str[500] ;
  printf("Enter filename to read: ");
  scanf("%s",filename);
  fp = fopen(filename,"r");

  if(fp==NULL)
  {
    printf("Error on writing to file\n");
    exit(1);
  }

  while(fgets(str,500,fp)!=NULL)
        {
            printf("%s",str);
        }
    fclose(fp);
}


int main(){
   Lotto lottos[MAX];

   int temp;
   Date date;
   int choice;
   printf("行事曆\n");
   printf("1.新增事項\n");
   printf("2.讀取\n");
   printf("3.Exit\n");
   printf("=>");
   scanf("%d", &choice);
   printf("\n");
   switch(choice)
		{
		 case  1:
		   randgen(lottos);
           showLottos(lottos,counter);
           writefFile(lottos) ;
		   break;
		case   2:
           readFile(lottos);
		   break;
		}


}
